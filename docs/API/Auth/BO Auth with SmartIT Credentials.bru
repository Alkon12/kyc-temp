post {
  url: {{host}}/api/public/graphql
  body: graphql
  auth: none
}

body:graphql {
  query authWithCredentials($email: String!, $password: String!) {
    authWithCredentials(
      email: $email,
      password: $password,
      provider: "SMARTIT"
      ) {
          accessToken
    }
  }
}

