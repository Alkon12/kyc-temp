meta {
  name: Get Conversations
  type: graphql
  seq: 3
}

post {
  url: {{graphqlEndpoint}}
  body: graphql
  auth: bearer
}

auth:bearer {
  token: {{accessToken}}
}

body:graphql {
  query getConversations($userId: ID!) {
    getConversations(userId: $userId) { 
      id
      channel
      userId
      canReply
    	unreadCount
    	lastActivityAt
      externalLink
      messages {
          id
          sender {
            id
            name
            type
            thumbnail
            phoneNumber
            email
          }
          content
          status
          createdAt
          contentType
      }
    }
  }
}

body:graphql:vars {
  {
      "userId": "dd8b5b17-a4df-41a5-94e5-36460eb65f71"
  }
}
